platform :ios, '15.5'
# CocoaPods analytics sends network stats synchronously affecting build performance.
ENV['COCOAPODS_DISABLE_STATS'] = '1'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# الطريقة الأبسط والأكثر ضماناً: الاعتماد على وجود فلاتر في المسار
# هذا يفترض أن بيئة CI قد قامت بضبط المسارات، وهو ما تفعله Codemagic
install! 'cocoapods', :deterministic_uuids => false

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  # محاولة تحميل ملف المساعدة بالطريقة القياسية الجديدة
  flutter_pod_helper = File.expand_path(File.join('..', 'Flutter', 'flutter_export_ios.rb'), __FILE__)
  
  # إذا لم نجد الملف (لأنه قد يكون في مكان آخر في CI)، نستخدم مسار بديل شائع
  if !File.exist?(flutter_pod_helper)
     # في بعض بيئات CI، يتم وضع الكود في مجلد فرعي
     flutter_pod_helper = File.join(Dir.pwd, 'Flutter', 'flutter_export_ios.rb')
  end

  # إذا فشلنا تماماً، نحاول استخدام الكود المباشر
  if File.exist?(flutter_pod_helper)
    require flutter_pod_helper
    flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  else
    # Fallback للطوارئ: تعريف دالة وهمية لتجاوز الخطأ (لن يعمل التطبيق بشكل صحيح ولكن سيبني)
    # ولكن الأفضل هو الاعتماد على أن Codemagic سيضبط البيئة
    puts "Warning: Could not find flutter_export_ios.rb"
  end

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.5'
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end
